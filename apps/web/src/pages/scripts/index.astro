---
import BaseLayout from "../../layouts/BaseLayout.astro";
import CategoryBadge from "../../components/CategoryBadge.astro";
import type { ScriptCategory } from "@vela/shared";

interface ScriptPattern {
  id: string;
  name: string;
  vendor: string;
  category: ScriptCategory;
  urlPatterns: string[];
  knownIssues: string[];
  alternatives: string[];
}

// Fetch scripts from API
const apiUrl = import.meta.env.API_URL || "http://localhost:8787";
let scripts: ScriptPattern[] = [];
let categories: { category: string; count: number }[] = [];

const selectedCategory = Astro.url.searchParams.get("category");
const searchQuery = Astro.url.searchParams.get("search");

try {
  const params = new URLSearchParams();
  if (selectedCategory) params.set("category", selectedCategory);
  if (searchQuery) params.set("search", searchQuery);
  params.set("limit", "100");

  const [scriptsRes, categoriesRes] = await Promise.all([
    fetch(`${apiUrl}/scripts?${params}`),
    fetch(`${apiUrl}/scripts/categories`),
  ]);

  if (scriptsRes.ok) {
    const data = await scriptsRes.json();
    scripts = data.scripts;
  }
  if (categoriesRes.ok) {
    const data = await categoriesRes.json();
    categories = data.categories;
  }
} catch (e) {
  console.error("Failed to fetch scripts:", e);
}
---

<BaseLayout title="Script Database">
  <div class="mx-auto max-w-6xl px-4 py-8">
    <div class="mb-8">
      <span class="text-xs text-gray-600 uppercase tracking-[0.3em] font-mono">// pattern registry</span>
      <h1 class="text-3xl font-bold mt-2 text-neon-orange">Script Database</h1>
      <p class="text-gray-500 font-mono text-sm mt-1">
        Browse {scripts.length}+ known third-party script patterns
      </p>
    </div>

    <!-- Filters -->
    <div class="flex flex-col md:flex-row gap-4 mb-8">
      <!-- Search -->
      <form class="flex-1" method="get">
        <div class="relative">
          <input
            type="text"
            name="search"
            placeholder="Search scripts..."
            value={searchQuery || ""}
            class="w-full bg-cyber-dark border border-cyber-light px-4 py-2 pl-10 text-gray-100 placeholder:text-gray-600 focus:outline-none focus:border-neon-cyan focus:shadow-neon-cyan transition-all duration-200 font-mono"
          />
          <svg class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-600 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </div>
      </form>

      <!-- Category Filter -->
      <div class="flex flex-wrap gap-2">
        <a
          href="/scripts"
          class:list={[
            "px-3 py-1.5 text-sm transition-all duration-200 border uppercase tracking-wide",
            !selectedCategory
              ? "bg-neon-orange/10 border-neon-orange text-neon-orange"
              : "bg-cyber-darker border-cyber-light text-gray-400 hover:border-neon-cyan/50 hover:text-neon-cyan",
          ]}
        >
          All
        </a>
        {categories.map(({ category, count }) => (
          <a
            href={`/scripts?category=${category}`}
            class:list={[
              "px-3 py-1.5 text-sm transition-all duration-200 border uppercase tracking-wide",
              selectedCategory === category
                ? "bg-neon-orange/10 border-neon-orange text-neon-orange"
                : "bg-cyber-darker border-cyber-light text-gray-400 hover:border-neon-cyan/50 hover:text-neon-cyan",
            ]}
          >
            {category} ({count})
          </a>
        ))}
      </div>
    </div>

    <!-- Scripts Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
      {scripts.map((script) => (
        <a
          href={`/scripts/${script.id}`}
          class="block bg-cyber-darker border border-cyber-light p-4 hover:border-neon-orange/50 hover:shadow-neon-orange transition-all duration-200"
        >
          <div class="flex items-start justify-between mb-2">
            <h3 class="font-semibold text-gray-100">{script.name}</h3>
            <CategoryBadge category={script.category} />
          </div>
          <p class="text-sm text-gray-500 mb-3 font-mono">{script.vendor}</p>
          {script.knownIssues.length > 0 && (
            <p class="text-xs text-neon-orange font-mono">
              &gt; {script.knownIssues.length} known issue{script.knownIssues.length > 1 ? "s" : ""}
            </p>
          )}
          {script.alternatives.length > 0 && (
            <p class="text-xs text-neon-cyan font-mono">
              &gt; {script.alternatives.length} alternative{script.alternatives.length > 1 ? "s" : ""} available
            </p>
          )}
        </a>
      ))}
    </div>

    {scripts.length === 0 && (
      <div class="text-center py-16 border border-cyber-light bg-cyber-darker">
        <p class="text-gray-500 font-mono">// No scripts found matching query</p>
      </div>
    )}
  </div>
</BaseLayout>
