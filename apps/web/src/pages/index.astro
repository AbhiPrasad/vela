---
import BaseLayout from "../layouts/BaseLayout.astro";
import ScanForm from "../components/ScanForm.astro";
import FeatureCard from "../components/FeatureCard.astro";
---

<BaseLayout title="Third-Party Script Auditor">
  <div class="mx-auto max-w-6xl px-4 py-16">
    <!-- Hero Section -->
    <section class="text-center mb-20">
      <div class="mb-6">
        <span class="text-xs text-gray-500 uppercase tracking-[0.3em] font-mono">// script analysis protocol v1.0</span>
      </div>
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
        <span class="text-gray-100">Know What Your</span><br />
        <span class="text-neon-orange text-neon-glow-orange">Third-Party Scripts</span><br />
        <span class="text-gray-100">Are Really Doing</span>
      </h1>
      <p class="text-lg text-gray-400 max-w-2xl mx-auto mb-10 font-mono">
        Analyze any website to discover third-party scripts, their performance impact,
        data collection behavior, and get actionable recommendations.
      </p>

      <ScanForm />
    </section>

    <!-- Features Section -->
    <section class="mb-20">
      <div class="text-center mb-10">
        <span class="text-xs text-gray-600 uppercase tracking-[0.3em] font-mono">// capabilities</span>
      </div>
      <div class="grid md:grid-cols-3 gap-6">
        <FeatureCard
          icon="performance"
          title="Performance Analysis"
          description="Measure main thread blocking time, network requests, and impact on Core Web Vitals for each script."
        />
        <FeatureCard
          icon="privacy"
          title="Privacy Insights"
          description="Detect cookies, storage usage, fingerprinting techniques, and data being sent to third parties."
        />
        <FeatureCard
          icon="database"
          title="Script Database"
          description="Identify 100+ common third-party scripts with known issues, alternatives, and community ratings."
        />
      </div>
    </section>

    <!-- How It Works -->
    <section class="mb-20">
      <div class="text-center mb-10">
        <span class="text-xs text-gray-600 uppercase tracking-[0.3em] font-mono">// protocol sequence</span>
      </div>
      <div class="grid md:grid-cols-4 gap-4">
        <div class="text-center p-6 border border-cyber-light bg-cyber-darker hover:border-neon-cyan/30 transition-all duration-200 group">
          <div class="w-12 h-12 border-2 border-neon-cyan text-neon-cyan flex items-center justify-center mx-auto mb-4 font-bold text-lg group-hover:shadow-neon-cyan transition-all duration-200">
            01
          </div>
          <h3 class="font-semibold mb-2 uppercase tracking-wide text-sm">Input Target</h3>
          <p class="text-sm text-gray-500 font-mono">Enter target URL for analysis</p>
        </div>
        <div class="text-center p-6 border border-cyber-light bg-cyber-darker hover:border-neon-cyan/30 transition-all duration-200 group">
          <div class="w-12 h-12 border-2 border-neon-cyan text-neon-cyan flex items-center justify-center mx-auto mb-4 font-bold text-lg group-hover:shadow-neon-cyan transition-all duration-200">
            02
          </div>
          <h3 class="font-semibold mb-2 uppercase tracking-wide text-sm">Execute Scan</h3>
          <p class="text-sm text-gray-500 font-mono">Browser renders and monitors page</p>
        </div>
        <div class="text-center p-6 border border-cyber-light bg-cyber-darker hover:border-neon-cyan/30 transition-all duration-200 group">
          <div class="w-12 h-12 border-2 border-neon-cyan text-neon-cyan flex items-center justify-center mx-auto mb-4 font-bold text-lg group-hover:shadow-neon-cyan transition-all duration-200">
            03
          </div>
          <h3 class="font-semibold mb-2 uppercase tracking-wide text-sm">Identify Scripts</h3>
          <p class="text-sm text-gray-500 font-mono">Match against pattern database</p>
        </div>
        <div class="text-center p-6 border border-cyber-light bg-cyber-darker hover:border-neon-cyan/30 transition-all duration-200 group">
          <div class="w-12 h-12 border-2 border-neon-cyan text-neon-cyan flex items-center justify-center mx-auto mb-4 font-bold text-lg group-hover:shadow-neon-cyan transition-all duration-200">
            04
          </div>
          <h3 class="font-semibold mb-2 uppercase tracking-wide text-sm">Generate Report</h3>
          <p class="text-sm text-gray-500 font-mono">View analysis and recommendations</p>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="border border-cyber-light bg-cyber-darker p-8">
      <div class="text-center mb-8">
        <span class="text-xs text-gray-600 uppercase tracking-[0.3em] font-mono">// system status</span>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center">
          <p class="text-4xl font-bold text-neon-cyan text-neon-glow-cyan mb-1">65+</p>
          <p class="text-xs text-gray-500 uppercase tracking-wider">Known Scripts</p>
        </div>
        <div class="text-center">
          <p class="text-4xl font-bold text-neon-pink text-neon-glow-pink mb-1">8</p>
          <p class="text-xs text-gray-500 uppercase tracking-wider">Categories</p>
        </div>
        <div class="text-center">
          <p class="text-4xl font-bold text-neon-amber mb-1">&lt;60s</p>
          <p class="text-xs text-gray-500 uppercase tracking-wider">Scan Time</p>
        </div>
        <div class="text-center">
          <p class="text-4xl font-bold text-neon-orange text-neon-glow-orange mb-1">Free</p>
          <p class="text-xs text-gray-500 uppercase tracking-wider">Access Level</p>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
