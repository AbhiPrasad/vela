---
import AdminLayout from "../../layouts/AdminLayout.astro";

const API_URL = import.meta.env.API_URL ?? "http://localhost:8787";
const user = Astro.locals.user;

// Fetch stats
let patternCount = 0;
let categoryCount = 0;

try {
  const [patternsRes, categoriesRes] = await Promise.all([
    fetch(`${API_URL}/scripts?limit=1`),
    fetch(`${API_URL}/scripts/categories`),
  ]);

  if (patternsRes.ok) {
    const data = await patternsRes.json();
    patternCount = data.pagination?.total ?? 0;
  }

  if (categoriesRes.ok) {
    const data = await categoriesRes.json();
    categoryCount = data.categories?.filter((c: { count: number }) => c.count > 0).length ?? 0;
  }
} catch {
  // Stats unavailable
}
---

<AdminLayout title="Dashboard">
  <div class="mb-8">
    <h1 class="text-3xl font-bold mb-2">Dashboard</h1>
    <p class="text-zinc-400">Welcome back, {user?.name ?? user?.email}</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="card">
      <div class="flex items-center gap-4">
        <div class="p-3 bg-blue-500/20 rounded-lg">
          <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
          </svg>
        </div>
        <div>
          <p class="text-2xl font-bold">{patternCount}</p>
          <p class="text-sm text-zinc-400">Script Patterns</p>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="flex items-center gap-4">
        <div class="p-3 bg-green-500/20 rounded-lg">
          <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
        </div>
        <div>
          <p class="text-2xl font-bold">{categoryCount}</p>
          <p class="text-sm text-zinc-400">Categories</p>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="flex items-center gap-4">
        <div class="p-3 bg-purple-500/20 rounded-lg">
          <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
        </div>
        <div>
          <p class="text-2xl font-bold capitalize">{user?.role}</p>
          <p class="text-sm text-zinc-400">Your Role</p>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="card">
      <h2 class="text-lg font-semibold mb-4">Quick Actions</h2>
      <div class="space-y-3">
        <a
          href="/admin/patterns/new"
          class="flex items-center gap-3 p-3 bg-zinc-800 rounded-lg hover:bg-zinc-700 transition-colors"
        >
          <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          <span>Add New Pattern</span>
        </a>
        <a
          href="/admin/patterns"
          class="flex items-center gap-3 p-3 bg-zinc-800 rounded-lg hover:bg-zinc-700 transition-colors"
        >
          <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/>
          </svg>
          <span>View All Patterns</span>
        </a>
        <a
          href="/"
          class="flex items-center gap-3 p-3 bg-zinc-800 rounded-lg hover:bg-zinc-700 transition-colors"
        >
          <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
          </svg>
          <span>Go to Public Site</span>
        </a>
      </div>
    </div>

    <div class="card">
      <h2 class="text-lg font-semibold mb-4">Getting Started</h2>
      <div class="text-sm text-zinc-400 space-y-3">
        <p>
          Welcome to the Vela admin panel. Here you can manage the script pattern database that powers the third-party script auditor.
        </p>
        <ul class="list-disc list-inside space-y-1">
          <li><strong>Patterns</strong> - Add, edit, or remove script detection patterns</li>
          {user?.role === "admin" && (
            <li><strong>Users</strong> - Manage admin and editor accounts</li>
          )}
        </ul>
        <p>
          Use the sidebar to navigate between sections.
        </p>
      </div>
    </div>
  </div>
</AdminLayout>
