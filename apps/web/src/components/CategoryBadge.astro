---
import type { ScriptCategory } from "@vela/shared";

interface Props {
  category: ScriptCategory;
  size?: "small" | "medium" | "large";
}

const { category, size = "small" } = Astro.props;

const categoryColors: Record<ScriptCategory, string> = {
  analytics: "border-category-analytics text-category-analytics",
  advertising: "border-category-advertising text-category-advertising",
  social: "border-category-social text-category-social",
  "customer-support": "border-category-customer-support text-category-customer-support",
  "ab-testing": "border-category-ab-testing text-category-ab-testing",
  "tag-manager": "border-category-tag-manager text-category-tag-manager",
  cdn: "border-category-cdn text-category-cdn",
  fonts: "border-category-fonts text-category-fonts",
  video: "border-category-video text-category-video",
  other: "border-category-other text-category-other",
};

const categoryLabels: Record<ScriptCategory, string> = {
  analytics: "Analytics",
  advertising: "Advertising",
  social: "Social",
  "customer-support": "Support",
  "ab-testing": "A/B Testing",
  "tag-manager": "Tag Manager",
  cdn: "CDN",
  fonts: "Fonts",
  video: "Video",
  other: "Other",
};

const sizeClasses = {
  small: "px-2 py-0.5 text-xs",
  medium: "px-3 py-1 text-sm",
  large: "px-4 py-1.5 text-base",
};
---

<span
  class:list={[
    "border font-medium whitespace-nowrap uppercase tracking-wide bg-cyber-darker",
    categoryColors[category],
    sizeClasses[size],
  ]}
>
  {categoryLabels[category]}
</span>
