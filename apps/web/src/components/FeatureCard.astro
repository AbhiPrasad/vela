---
interface Props {
  icon: "performance" | "privacy" | "database" | string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="bg-cyber-darker border border-cyber-light p-6 hover:border-neon-orange/50 hover:shadow-neon-orange transition-all duration-300 group">
  <div class="w-12 h-12 border border-neon-orange/50 flex items-center justify-center mb-4 text-neon-orange group-hover:border-neon-orange group-hover:shadow-neon-orange transition-all duration-300">
    {icon === "performance" && (
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"/>
      </svg>
    )}
    {icon === "privacy" && (
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
      </svg>
    )}
    {icon === "database" && (
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
      </svg>
    )}
  </div>
  <h3 class="text-base font-semibold mb-2 uppercase tracking-wide text-gray-100">{title}</h3>
  <p class="text-gray-500 text-sm font-mono leading-relaxed">{description}</p>
</div>
