---
import type { Grade } from "@vela/shared";

interface Props {
  grade: Grade;
  size?: "small" | "medium" | "large";
}

const { grade, size = "medium" } = Astro.props;

const gradeColors: Record<Grade, string> = {
  A: "border-grade-a text-grade-a",
  B: "border-grade-b text-grade-b",
  C: "border-grade-c text-grade-c",
  D: "border-grade-d text-grade-d",
  F: "border-grade-f text-grade-f",
};

const gradeGlows: Record<Grade, string> = {
  A: "shadow-[0_0_10px_rgba(0,217,255,0.5)]",
  B: "shadow-[0_0_10px_rgba(10,189,198,0.5)]",
  C: "shadow-[0_0_10px_rgba(255,215,0,0.5)]",
  D: "shadow-[0_0_10px_rgba(255,106,0,0.5)]",
  F: "shadow-[0_0_10px_rgba(255,51,51,0.5)]",
};

const sizeClasses = {
  small: "w-8 h-8 text-sm border",
  medium: "w-12 h-12 text-xl border-2",
  large: "w-16 h-16 text-3xl border-2",
};

const gradeLabels: Record<Grade, string> = {
  A: "Excellent",
  B: "Good",
  C: "Fair",
  D: "Poor",
  F: "Critical",
};
---

<div class="flex items-center gap-3">
  <div
    class:list={[
      "flex items-center justify-center font-bold bg-cyber-darker",
      gradeColors[grade],
      gradeGlows[grade],
      sizeClasses[size],
    ]}
  >
    {grade}
  </div>
  {size === "large" && (
    <span class="text-gray-500 text-sm uppercase tracking-wider">{gradeLabels[grade]}</span>
  )}
</div>
