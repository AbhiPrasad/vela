---
const apiUrl = import.meta.env.API_URL || "http://localhost:8787";
---

<form id="scan-form" class="max-w-2xl mx-auto">
  <div class="flex gap-2">
    <input
      type="url"
      name="url"
      placeholder="https://example.com"
      required
      class="flex-1 bg-zinc-900 border border-zinc-700 rounded-lg px-4 py-3 text-lg focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
    />
    <button
      type="submit"
      class="bg-blue-600 hover:bg-blue-500 text-white font-semibold px-6 py-3 rounded-lg transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
    >
      <span class="button-text">Scan</span>
      <span class="button-loading hidden">
        <span class="inline-block animate-spin">‚è≥</span>
      </span>
    </button>
  </div>
  <p id="form-error" class="text-red-400 text-sm mt-2 hidden"></p>
</form>

<script define:vars={{ apiUrl }}>
  const form = document.getElementById("scan-form");
  const button = form.querySelector("button");
  const buttonText = button.querySelector(".button-text");
  const buttonLoading = button.querySelector(".button-loading");
  const errorEl = document.getElementById("form-error");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const url = formData.get("url");

    // Validate URL
    try {
      new URL(url);
    } catch {
      errorEl.textContent = "Please enter a valid URL";
      errorEl.classList.remove("hidden");
      return;
    }

    // Update UI
    button.disabled = true;
    buttonText.classList.add("hidden");
    buttonLoading.classList.remove("hidden");
    errorEl.classList.add("hidden");

    try {
      const response = await fetch(`${apiUrl}/scans`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ url }),
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || "Failed to start scan");
      }

      // Redirect to scan result page
      window.location.href = `/scan/${data.id}`;
    } catch (error) {
      errorEl.textContent = error.message;
      errorEl.classList.remove("hidden");

      // Reset button
      button.disabled = false;
      buttonText.classList.remove("hidden");
      buttonLoading.classList.add("hidden");
    }
  });
</script>
