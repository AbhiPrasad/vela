---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Analyze third-party scripts on any website" } = Astro.props;
const user = Astro.locals.user;
const isAdmin = user?.role === "admin" || user?.role === "editor";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&family=Orbitron:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title} | VELA</title>
  </head>
  <body class="min-h-screen bg-cyber-black text-gray-100 antialiased flex flex-col">
    <!-- Header -->
    <header class="border-b border-cyber-light bg-cyber-darker/80 backdrop-blur-sm sticky top-0 z-50">
      <nav class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
        <a href="/" class="flex items-center gap-3 group">
          <div class="w-8 h-8 border-2 border-neon-orange flex items-center justify-center text-neon-orange font-bold text-sm group-hover:shadow-neon-orange transition-all duration-200">
            V
          </div>
          <span class="text-xl font-bold tracking-wider text-neon-orange group-hover:text-neon-glow-orange transition-all">VELA</span>
        </a>
        <div class="flex items-center gap-6">
          <a href="/scripts" class="text-gray-400 hover:text-neon-cyan transition-all duration-200 text-sm uppercase tracking-wide">
            Database
          </a>
          {isAdmin && (
            <a href="/admin" class="text-gray-400 hover:text-neon-cyan transition-all duration-200 text-sm uppercase tracking-wide">
              Admin
            </a>
          )}
          {user ? (
            <a href="/auth/logout" class="text-gray-400 hover:text-neon-pink transition-all duration-200 text-sm uppercase tracking-wide">
              Logout
            </a>
          ) : (
            <a href="/auth/login" class="text-gray-400 hover:text-neon-cyan transition-all duration-200 text-sm uppercase tracking-wide">
              Login
            </a>
          )}
          <a
            href="https://github.com"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-500 hover:text-neon-amber transition-all duration-200"
            aria-label="GitHub"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
            </svg>
          </a>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-cyber-light mt-auto bg-cyber-darker">
      <div class="mx-auto max-w-6xl px-4 py-8">
        <div class="flex flex-col items-center justify-between gap-4 sm:flex-row">
          <div class="flex items-center gap-3">
            <div class="w-6 h-6 border border-neon-orange/50 flex items-center justify-center text-neon-orange/50 font-bold text-xs">
              V
            </div>
            <p class="text-sm text-gray-500 uppercase tracking-wider">
              Third-Party Script Auditor
            </p>
          </div>
          <p class="text-sm text-gray-600 font-mono">
            // analyzing the digital shadows
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
